{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "description": "The exact command string that triggers the sound"
          },
          "audioFilePath": {
            "type": "string",
            "description": "The file path to the audio file associated with the command. Path is relative to this config file.",
            "pattern": "^[a-zA-Z0-9_\\-\\.]+\\.(mp3|wav)$"
          }
        },
        "required": ["command", "audioFilePath"],
        "additionalProperties": false
      }
    }
  },
  "required": ["commands"],
  "additionalProperties": false
}
